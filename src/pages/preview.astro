---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import MobileHeader from "../components/MobileHeader.astro";
import Hero from "../components/Hero.astro";
import AboutSection from "../components/AboutSection.astro";
import FullBleedImage from "../components/FullBleedImage.astro";
import TextSection from "../components/TextSection.astro";
import CTA from "../components/CTA.astro";
import Footer from "../components/Footer.astro";
import ImageGallery from "../components/ImageGallery.astro";
---

<BaseLayout title="Viršupis — Privatus namų kvartalas Vilniuje">
  <link slot="head" rel="preload" as="image" href="/images/Hero%20image.png" media="(min-width: 769px)" />
  <link slot="head" rel="preload" as="image" href="/images/new%20image.png" media="(max-width: 768px)" />
  <Header />
  <MobileHeader />

  <main>
    <Hero
      image="/images/Hero%20image.png"
      mobileImage="/images/new%20image.png"
      alt="Viršupis - privatus namų kvartalas"
    />

    <!-- Content wrapper - scrolls over fixed hero -->
    <div class="content-wrapper">
      <!-- About Section -->
      <AboutSection />

      <!-- Full Bleed Area Image -->
      <FullBleedImage src="/images/Area image.png" alt="Viršupis area overview" parallax={true} />

      <!-- Text Section -->
      <TextSection
        highlight="Viršupis — tai daugiau nei namai. Tai bendruomenė, kurioje kiekviena detalė sukurta jūsų komfortui ir gyvenimo kokybei."
        content="Modernus gyvenamasis kvartalas Antakalnyje, kur susitinka miesto patogumas ir gamtos ramybė. 33 individualūs namai su privačiais sklypais, sukurti tiems, kurie vertina erdvę, privatumą ir aukščiausią kokybę."
      />

      <!-- Two Image Gallery with Parallax -->
      <ImageGallery
        image1="/images/House 1.jpeg"
        image1Alt="Modern house exterior"
        image2="/images/House 2.jpeg"
        image2Alt="House in forest"
      />

      <!-- Text Section -->
      <TextSection
        highlight="Kiekvienas namas suprojektuotas taip, kad maksimaliai išnaudotų natūralią šviesą ir atvertų vaizdus į supančią gamtą."
        content="Erdvūs langai, aukštos lubos ir atviro plano erdvės sukuria jaukią, bet modernią atmosferą. Kokybiškos medžiagos ir dėmesys detalėms užtikrina ilgaamžiškumą."
      />

      <!-- Full Bleed Image -->
      <FullBleedImage src="/images/Area image2.jpeg" alt="House interior" parallax={true} />

      <!-- Text Section -->
      <TextSection
        highlight="Viršupis — tai vieta, kur galite mėgautis ramybe ir gamta, neprarandant miesto patogumo."
        content="Kvartalas suprojektuotas taip, kad kiekvienas namas turėtų privatumą ir erdvę, o bendruomenės zonos skatintų kaimynystę ir aktyvų gyvenimo būdą."
      />

      <!-- Two Image Gallery with Parallax (Reversed) -->
      <ImageGallery
        image1="/images/baseinas.jpeg"
        image1Alt="Pool house"
        image2="/images/Bendruomenes erdve.jpeg"
        image2Alt="Community space"
        reversed={true}
      />

      <CTA
        title="Sužinokite daugiau"
        description="Susisiekite su mumis ir gaukite išsamią informaciją apie Viršupio projektą."
        buttonText="Susisiekti"
        buttonHref="mailto:info@virsupis.com"
      />

      <Footer />
    </div>
  </main>
</BaseLayout>

<style>
  .content-wrapper {
    position: relative;
    z-index: 2;
    background-color: var(--color-white, #f8f4ee);
    margin-top: -1px; /* Overlap to eliminate subpixel gap */
    padding-top: 1px; /* Compensate for negative margin */
  }

  @media (max-width: 768px) {
    .content-wrapper {
      /* Use backface-visibility to avoid GSAP conflicts */
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
    }
  }
</style>
