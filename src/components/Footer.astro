---
import Logo from "./Logo.astro";

const email = "mindaugas@virsupis.com";
const instagramUrl = "https://www.instagram.com/virsupis_vilnius/";
const mapsUrl = "https://maps.app.goo.gl/VrLXHLc5Ni44R8rA6";
const currentYear = new Date().getFullYear();
---

<footer id="kontaktai" class="footer">
  <!-- Top Row: Description | Navigation Columns -->
  <div class="footer-top">
    <!-- Left: Description -->
    <div class="footer-left">
      <p class="footer-description">
        Viršupis — privatus 33 namų kvartalas Antakalnyje, Vilniuje. Modernus gyvenimas gamtos apsuptyje, vos 15 minučių nuo miesto centro.
      </p>
    </div>

    <!-- Right: Navigation Columns -->
    <div class="footer-nav">
      <div class="nav-column">
        <a href="#apie" class="nav-link">
          <span class="nav-link-text">APIE</span>
          <span class="nav-link-underline"></span>
        </a>
        <a href={mapsUrl} target="_blank" rel="noopener noreferrer" class="nav-link">
          <span class="nav-link-text">ADRESAS</span>
          <span class="nav-link-underline"></span>
        </a>
      </div>

      <div class="nav-column">
        <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="nav-link">
          <span class="nav-link-text">SEKTI</span>
          <span class="nav-link-underline"></span>
        </a>
        <a href={`mailto:${email}`} class="nav-link">
          <span class="nav-link-text">SUSISIEKTI</span>
          <span class="nav-link-underline"></span>
        </a>
      </div>
    </div>
  </div>

  <!-- Center: Large Logo -->
  <div class="footer-logo-wrapper">
    <Logo class="footer-logo" variant="light" />
  </div>

  <!-- Bottom Row: Disclaimer | Copyright -->
  <div class="footer-bottom">
    <p class="footer-disclaimer">
      Svetainėje naudojamos iliustacijos yra informacinio pobūdžio.
    </p>
    <p class="footer-copyright">
      © {currentYear} Viršupis. Visos teisės saugomos.
    </p>
  </div>
</footer>

<style>
  .footer {
    background-color: #161514;
    color: var(--color-white, #f8f4ee);
    padding: 80px 24px calc(24px + env(safe-area-inset-bottom, 0px));
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  /* Initial state for fade-in animation */
  .footer-top,
  .footer-logo-wrapper,
  .footer-bottom {
    opacity: 0;
  }

  /* Top Row */
  .footer-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    max-width: 1392px;
    margin: 0 auto;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 28px;
    max-width: 641px;
  }

  .footer-description {
    font-family: var(--font-body, "General Sans", sans-serif);
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    color: var(--color-white, #f8f4ee);
    margin: 0;
    text-align: left;
    padding-right: 42px;
  }

  /* Navigation */
  .footer-nav {
    display: flex;
  }

  .nav-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    padding-left: 16px;
    border-left: 0.5px solid var(--color-white, #f8f4ee);
    width: 212px;
  }

  .nav-link {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
    font-family: "General Sans", sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 14px;
    letter-spacing: 0.2em;
    color: var(--color-white, #f8f4ee);
    text-decoration: none;
    text-align: left;
  }

  .nav-link-text {
    position: relative;
  }

  .nav-link-underline {
    display: block;
    width: 100%;
    height: 0.5px;
    background-color: var(--color-white, #f8f4ee);
    margin-top: 4px;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.3s ease-out;
  }

  .nav-link:hover .nav-link-underline {
    transform: scaleX(1);
  }

  /* Logo */
  .footer-logo-wrapper {
    width: 100%;
    max-width: 1392px;
    margin: 0 auto;
    padding: 16px 0 24px;
    color: var(--color-white, #f8f4ee);
  }

  .footer-logo {
    width: 100%;
    height: auto;
  }

  /* Bottom Row */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1392px;
    margin: 0 auto;
  }

  .footer-disclaimer,
  .footer-copyright {
    font-family: var(--font-body, "General Sans", sans-serif);
    font-weight: 400;
    font-size: 12px;
    line-height: 12px;
    color: var(--color-white, #f8f4ee);
    margin: 0;
  }

  /* Tablet */
  @media (max-width: 1023px) {
    .footer-top {
      flex-direction: column;
      gap: 48px;
    }

    .footer-left {
      max-width: 100%;
    }

    .nav-column {
      width: 180px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .footer {
      padding: 60px 16px calc(24px + env(safe-area-inset-bottom, 0px));
      gap: 40px;
    }

    .footer-top {
      flex-direction: column;
      gap: 40px;
    }

    .footer-nav {
      width: 100%;
    }

    .nav-column {
      flex: 1;
      width: auto;
      min-width: 0;
    }

    .footer-logo-wrapper {
      padding: 8px 0 16px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 4px;
      align-items: flex-start;
    }

    .footer-disclaimer,
    .footer-copyright {
      font-size: 12px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const footer = document.querySelector('.footer');
  const footerTop = document.querySelector('.footer-top');
  const footerLogo = document.querySelector('.footer-logo-wrapper');
  const footerBottom = document.querySelector('.footer-bottom');

  if (footer && footerTop && footerLogo && footerBottom) {
    // Create timeline for subtle staggered fade
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: footer,
        start: 'top 90%',
        toggleActions: 'play none none none',
      }
    });

    // Top section fades in first
    tl.to(footerTop, {
      opacity: 1,
      duration: 0.8,
      ease: 'power2.out',
    });

    // Logo follows
    tl.to(footerLogo, {
      opacity: 1,
      duration: 0.8,
      ease: 'power2.out',
    }, '-=0.6');

    // Bottom section last
    tl.to(footerBottom, {
      opacity: 1,
      duration: 0.8,
      ease: 'power2.out',
    }, '-=0.6');
  }
</script>

