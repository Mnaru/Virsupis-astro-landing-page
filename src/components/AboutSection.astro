---
interface Props {
  heading?: string;
  description?: string;
}

const {
  heading = "Apie projektą",
  description = `Pastatyti namą ir sukurti namus — dvi skirtingos ambicijos. „Kai pradedi namus vertinti pagal tualetų skaičių — jau lauk bėdos", sako Mindaugas Plisas, Viršupio projekto autorius. Anot jo, tobuli namai nėra tie, kurie uždaro gyventojus išpuoselėtoje pilaitėje, atriboję nuo kaimynų ir supančio pasaulio. Namai turi kurti ryšį, o ne izoliuoti. Apie tai ir kalbamės.`
} = Astro.props;
---

<section id="apie" class="about-section">
  <div class="about-content">
    <h2 class="about-heading">{heading}</h2>
    <p class="about-description">{description}</p>
  </div>

</section>

<style>
  .about-section {
    position: relative;
    z-index: 2;
    background-color: var(--color-white, #f8f4ee);
    height: 750px;
    padding: 90px 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 64px;
    text-align: center;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    max-width: 854px;
    width: 100%;
  }

  .about-heading {
    font-family: "General Sans", sans-serif;
    font-weight: 700;
    font-size: 21px;
    line-height: 1;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-black, #161514);
    margin: 0;
  }

  .about-description {
    font-family: var(--font-body, "General Sans", sans-serif);
    font-weight: 400;
    font-size: 16px;
    line-height: normal;
    color: var(--color-black, #161514);
    margin: 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-section {
      padding: 64px 16px;
      gap: 48px;
    }

    .about-content {
      gap: 24px;
    }

    .about-heading {
      font-size: 18px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Fade in for heading
  const aboutHeading = document.querySelector('.about-heading');
  if (aboutHeading) {
    gsap.from(aboutHeading, {
      opacity: 0,
      duration: 0.6,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: aboutHeading,
        start: 'top 85%',
        toggleActions: 'play none none none',
      }
    });
  }

  // Fade in for description text
  const aboutDescription = document.querySelector('.about-description');
  if (aboutDescription) {
    gsap.from(aboutDescription, {
      opacity: 0,
      duration: 0.6,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: aboutDescription,
        start: 'top 85%',
        toggleActions: 'play none none none',
      }
    });
  }

</script>
