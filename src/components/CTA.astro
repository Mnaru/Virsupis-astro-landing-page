---
interface Props {
  title: string;
  description?: string;
  buttonText: string;
  buttonHref: string;
}

const { title, description, buttonText, buttonHref } = Astro.props;
---

<section class="py-24 md:py-32 bg-[var(--color-border)]/20">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <h2 class="text-3xl md:text-4xl font-medium mb-6">{title}</h2>
    {description && <p class="text-lg text-white/70 mb-10">{description}</p>}
    <a
      href={buttonHref}
      class="inline-block px-8 py-4 bg-white text-black font-medium uppercase tracking-widest text-sm hover:bg-[var(--color-accent)] hover:text-white transition-colors"
    >
      {buttonText}
    </a>
  </div>
</section>
