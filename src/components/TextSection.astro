---
interface Props {
  highlight?: string;
  content?: string;
}

const { highlight, content } = Astro.props;
---

<section class="text-section">
  <div class="text-content">
    {highlight && <p class="highlight-text">{highlight}</p>}
    {content && <p class="body-text">{content}</p>}
    <slot />
  </div>
</section>

<style>
  .text-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 120px 24px;
    background-color: var(--color-white, #f8f4ee);
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 24px;
    width: 100%;
    max-width: 650px;
    text-align: left;
  }

  .highlight-text {
    font-family: var(--font-body, "General Sans", sans-serif);
    font-weight: 600;
    font-size: 22px;
    line-height: 1.2;
    color: var(--color-black, #161514);
    margin: 0;
    width: 100%;
  }

  .body-text {
    font-family: var(--font-body, "General Sans", sans-serif);
    font-weight: 400;
    font-size: 15px;
    line-height: 20px;
    color: var(--color-black, #161514);
    margin: 0;
    width: 100%;
  }

  /* Slot content styling - exclude highlight-text */
  .text-content :global(p:not(.highlight-text):not(.body-text)) {
    font-family: var(--font-body, "General Sans", sans-serif);
    font-weight: 400;
    font-size: 15px;
    line-height: 20px;
    color: var(--color-black, #161514);
    margin: 0;
    width: 100%;
  }

  /* Initial state for fade-in animation */
  .highlight-text,
  .body-text,
  .text-content :global(p:not(.highlight-text):not(.body-text)) {
    opacity: 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .text-section {
      padding: 80px 16px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Luxury staggered fade-in for text section content
  const textSections = document.querySelectorAll('.text-section');
  textSections.forEach((section) => {
    const textContent = section.querySelector('.text-content');
    const highlightText = section.querySelector('.highlight-text');
    // Get all paragraphs (body-text, slot content)
    const paragraphs = section.querySelectorAll('.text-content > p:not(.highlight-text)');

    // Set initial states
    if (highlightText) {
      gsap.set(highlightText, { opacity: 0, y: 25 });
    }
    paragraphs.forEach(p => {
      gsap.set(p, { opacity: 0, y: 20 });
    });

    // Create timeline for coordinated animation
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: textContent,
        start: 'top 85%',
        toggleActions: 'play none none none',
      }
    });

    // Highlight text: elegant slide-up
    if (highlightText) {
      tl.to(highlightText, {
        opacity: 1,
        y: 0,
        duration: 0.9,
        ease: 'power3.out',
      });
    }

    // Paragraphs: staggered cascade
    if (paragraphs.length > 0) {
      tl.to(paragraphs, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: 'power3.out',
        stagger: 0.15,
      }, highlightText ? '-=0.6' : 0);
    }
  });
</script>
